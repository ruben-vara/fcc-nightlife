extends layout

block content
  h1= title
  p These are the places you are going to:
    if !places.length
      p You didn't confirm any place yet, 
        a(href="/") search for your favorite location now
        | !
    if places.length
    ul.results
      each place in places
        li.place
          img(src=`${place.photos[1] || place.image_url || '/images/pub.jpg'}` alt=`${place.name}`)
          .text
            h3
              a(href=`${place.url}` target="_blank") #{place.name}
            .details
              p In 
                a(href=`/search-results?location=${place.location.city}`) #{place.location.city}
              p
                each cat in place.categories
                  span.tag #{cat.title}
                  |  
              p #{place.rating}, with #{place.review_count} ratings â€“ #{place.price}
          .more-details
            p It's #{place.is_closed ? 'closed' : 'open'} now!
            p Call and make a booking: #{place.display_phone}
            p It's exactly in: #{place.location.display_address}